{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "noImplicitAny": false,
    "sourceMap": true,
    "outDir": "build",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "lib": ["es6", "esnext", "es2015"],
    "moduleResolution": "node",
    "baseUrl": "./src/",
    "paths": {
      "@entities/*": ["./entities/*"],
      "@modules/*": ["./graphql/modules/*"],
      "@types": ["./types"],
      "@symbols": ["./graphql/modules/app.symbols"]
    }
  },
  "exclude": ["node_modules", "build", "config", "release"]
}
