{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "noImplicitAny": false,
    "sourceMap": true,
    "outDir": "build",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "lib": ["es6", "esnext", "es2015"],
    "moduleResolution": "node"
  },
  "exclude": ["node_modules", "build", "config", "release"]
}
